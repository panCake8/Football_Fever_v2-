<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"

    app:startDestination="@id/clubTablesFragment">

    <fragment
        android:id="@+id/clubTablesFragment"
        android:name="com.pancake.footballfever.ui.club.tables.ClubTablesFragment"
        android:label="fragment_club_tables"
        tools:layout="@layout/fragment_club_tables" >
        <argument
            android:name="teamId"
            app:argType="integer"
            android:defaultValue="40" />
        <argument
            android:name="season"
            app:argType="integer"
            android:defaultValue="2023" />
    </fragment>


    <fragment
        android:id="@+id/fixtureFragment"
        android:name="com.pancake.footballfever.ui.fixture.FixtureFragment"
        android:label="fragment_fixture"
        tools:layout="@layout/fragment_fixture" >
        <argument
            android:name="fixtureId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pancake.footballfever.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_fixtureFragment"
            app:destination="@id/fixtureFragment" />
        <action
            android:id="@+id/action_homeFragment_to_leagueStateFragment"
            app:destination="@id/leagueStateFragment" />
    </fragment>



    <fragment
        android:id="@+id/searchFragment"
        android:name="com.pancake.footballfever.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/leagueStateFragment"
        android:name="com.pancake.footballfever.ui.league_state.LeagueStateFragment"
        android:label="LeagueStateFragment"
        tools:layout="@layout/fragment_league_state">
        <argument
            android:name="leagueId"
            app:argType="integer" />
    </fragment>

</navigation>