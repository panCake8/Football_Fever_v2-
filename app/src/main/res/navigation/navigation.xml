<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"

    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/clubFragment"
        android:name="com.pancake.footballfever.ui.club_stats.ClubStatsFragment"
        android:label="fragment_club"
        tools:layout="@layout/fragment_club">
        <argument
            android:name="teamId"
            app:argType="integer" />
        <argument
            android:name="leagueId"
            app:argType="integer" />
        <argument
            android:name="season"
            app:argType="integer" />
        <action
            android:id="@+id/action_clubFragment_self"
            app:destination="@id/clubFragment" />
    </fragment>

    <fragment
        android:id="@+id/fixtureFragment"
        android:name="com.pancake.footballfever.ui.fixture.FixtureFragment"
        android:label="fragment_fixture"
        tools:layout="@layout/fragment_fixture">
        <action
            android:id="@+id/action_fixtureFragment_to_clubTablesFragment"
            app:destination="@id/clubFragment" />
        <argument
            android:name="fixtureId"
            app:argType="integer" />
        <argument
            android:name="season"
            app:argType="integer" />
        <argument
            android:name="date"
            app:argType="string" />
        <action
            android:id="@+id/action_fixtureFragment_self"
            app:destination="@id/fixtureFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.pancake.footballfever.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_fixtureFragment"
            app:destination="@id/fixtureFragment" />
        <action
            android:id="@+id/action_homeFragment_to_moreFragment"
            app:destination="@id/moreFragment" />
    </fragment>


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.pancake.footballfever.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_clubTablesFragment"
            app:destination="@id/clubFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.pancake.footballfever.ui.favourites.FavouritesFragment"
        android:label="FavouritesFragment" />

    <fragment
        android:id="@+id/leagueStateFragment"
        android:name="com.pancake.footballfever.ui.league_state.LeagueStateFragment"
        android:label="LeagueStateFragment"
        tools:layout="@layout/fragment_league_state">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="season"
            app:argType="integer" />
        <action
            android:id="@+id/action_leagueStateFragment_to_fixtureFragment"
            app:destination="@id/fixtureFragment" />
        <action
            android:id="@+id/action_leagueStateFragment_to_clubFragment"
            app:destination="@id/clubFragment" />

    </fragment>
    <fragment
        android:id="@+id/selectCountryFragment"
        android:name="com.pancake.footballfever.ui.selectCountry.SelectCountryFragment"
        android:label="SelectCountryFragment"
        tools:layout="@layout/fragment_select_country">
        <action
            android:id="@+id/action_selectCountryFragment_to_selectFavoriteTeamsFragment"
            app:destination="@id/selectFavoriteTeamsFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectFavoriteTeamsFragment"
        android:name="com.pancake.footballfever.ui.selectFavoriteTeams.SelectFavoriteTeamsFragment"
        android:label="fragment_select_favorite_teams"
        tools:layout="@layout/fragment_select_favorite_teams">
        <argument
            android:name="countryName"
            app:argType="string" />
        <action
            android:id="@+id/action_selectFavoriteTeamsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.pancake.footballfever.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_selectCountryFragment"
            app:destination="@id/selectCountryFragment"
            app:popUpTo="@+id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@+id/navigation"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/leagueMatch"
        android:name="com.pancake.footballfever.ui.league_state.match.LeagueMatchesFragment"
        android:label="fragment_league_match"
        tools:layout="@layout/fragment_league_match">
        <argument
            android:name="LeagueID"
            android:defaultValue="39"
            app:argType="integer" />
        <action
            android:id="@+id/action_leagueMatch_to_fixtureFragment"
            app:destination="@id/fixtureFragment" />
    </fragment>

    <fragment
        android:id="@+id/moreFragment"
        android:name="com.pancake.footballfever.ui.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" />

    <fragment
        android:id="@+id/leagueFragment"
        android:name="com.pancake.footballfever.ui.leagues.LeagueFragment"
        android:label="LeagueFragment"
        tools:layout="@layout/fragment_league">
        <action
            android:id="@+id/action_leagueFragment_to_leagueStateFragment"
            app:destination="@id/leagueStateFragment" />
    </fragment>

    <fragment
        android:id="@+id/hilt_SearchFragment"
        android:name="com.pancake.footballfever.ui.search.SearchFragment"
        android:label="Hilt_SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/headToHeadFragment"
        android:name="com.pancake.footballfever.ui.fixture.head2head.FragmentMatchHeadToHead"
        android:label="HeadToHeadFragment"
        tools:layout="@layout/fragment_match_stats_head_to_head">
        <action
            android:id="@+id/action_headToHeadFragment_to_fixtureFragment"
            app:destination="@id/fixtureFragment" />
        <argument
            android:name="matchIDs"
            app:argType="string" />


    </fragment>
    <fragment
        android:id="@+id/hilt_FavouritesFragment"
        android:name="com.pancake.footballfever.ui.favourites.FavouritesFragment"
        android:label="Hilt_FavouritesFragment"
        tools:layout="@layout/fragment_favourites">
        <action
            android:id="@+id/action_hilt_FavouritesFragment_to_clubFragment4"
            app:destination="@id/clubFragment" />
    </fragment>


</navigation>