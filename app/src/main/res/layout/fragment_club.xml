<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.pancake.footballfever.ui.club_stats.ClubViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".ui.club_stats.ClubFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/large_margin">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/club_image"
                android:layout_width="@dimen/team_logo_height"
                android:layout_height="@dimen/team_logo_width"
                android:scaleType="fitXY"
                app:roundPercent="1"
                app:setImageUrl="@{viewModel.clubUiState.success.teamLogo}"
                tools:srcCompat="@drawable/arsenal_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/club_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/club_image"
                app:layout_constraintTop_toTopOf="@+id/club_image"
                style="@style/club_name"
                android:layout_marginStart="@dimen/large_margin"
                android:text="@{viewModel.clubUiState.success.teamName}"
                tools:text="@string/club_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/club_image"
                app:layout_constraintTop_toBottomOf="@+id/club_name"
                style="@style/venue_name"
                android:layout_marginStart="@dimen/large_margin"
                android:text="@{viewModel.clubUiState.success.teamVenueName}"
                tools:text="@string/club_text"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/follow_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/follow_button"
                android:text="@string/follow"
                android:textAllCaps="false"
                android:textColor="@color/chip_stroke"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_container"
            app:tabBackground="@drawable/tab_background_unselected"
            app:tabIndicator="@drawable/tab_background_selected"
            app:tabIndicatorAnimationMode="linear"
            app:tabIndicatorColor="@color/green"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorGravity="stretch"
            app:tabMode="scrollable"
            app:tabPaddingEnd="@dimen/large_padding"
            app:tabPaddingStart="@dimen/large_padding"
            app:tabSelectedTextColor="@color/white" />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>