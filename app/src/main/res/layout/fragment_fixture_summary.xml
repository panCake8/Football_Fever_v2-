<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeId"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.pancake.footballfever.ui.fixture.summary.FixtureSummaryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            homeId="@{homeId}"
            summaryItems="@{viewModel.fixtureEventsUiState.items}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#222232"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".ui.fixture.summary.FixtureSummaryFragment"
            tools:listitem="@layout/item_summary_away" />

        <ProgressBar
            showIfLoading="@{viewModel.fixtureEventsUiState.loading}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:progress="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/errorIconImageView"
            showIfError="@{viewModel.fixtureEventsUiState.errorMsg}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_error_48"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            errorMessage="@{viewModel.fixtureEventsUiState.errorMsg}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorIconImageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>