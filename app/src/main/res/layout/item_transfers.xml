<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.pancake.footballfever.domain.models.Transfers" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        app:cardCornerRadius="@dimen/radius_semi_large">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/Secondary_color">


            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:fontFamily="@font/poppins"
                android:text="@{item.playerName.toString()}"
                android:textColor="@color/light_white"
                android:textSize="@dimen/text_medium"
                android:maxLines="2"
                android:maxLength="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Ronaldo" />

            <ImageView
                android:id="@+id/image_view_club_out"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:src="@drawable/neymar_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="128dp"
                app:setImageUrl="@{item.clubLogoOut.toString()}"
                android:layout_marginTop="@dimen/large_margin"/>

            <TextView
                android:id="@+id/name_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="@{item.clubNameOut.toString()}"
                android:textColor="@color/light_white"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"
                android:textSize="@dimen/text_medium"
                app:layout_constraintStart_toEndOf="@id/image_view_club_out"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/liverpool" />



            <TextView
                android:id="@+id/name_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:text="@{item.clubNameIN.toString()}"
                android:textColor="@color/light_white"
                android:textSize="@dimen/text_medium"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"
                app:layout_constraintStart_toEndOf="@id/image_view_club_in"
                app:layout_constraintTop_toBottomOf="@id/image_view_club_out"


                tools:text="@string/chelsea" />

            <ImageView
                android:id="@+id/image_view_club_in"
                android:layout_width="32dp"
                android:layout_height="32dp"
                tools:src="@drawable/neymar_pic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_view_club_out"
                android:layout_marginStart="128dp"
                app:setImageUrl="@{item.clubLogoIN.toString()}"
                android:layout_marginTop="@dimen/large_margin"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/large_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:fontFamily="@font/poppins"
                android:text="@{item.transferType.toString()}"
                android:textColor="@color/white38"
                android:textSize="@dimen/text_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/price" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>