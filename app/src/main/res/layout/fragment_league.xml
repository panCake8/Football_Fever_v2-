<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.pancake.footballfever.ui.leagues.LeaguesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Primary_color">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="16dp"
            android:autofillHints="creditCardExpirationDate"
            android:background="@drawable/search_bar"
            android:drawableRight="@drawable/search_icon"
            android:drawableTint="@color/hint_search_color"
            android:hint="@string/search_text"
            android:iconifiedByDefault="false"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingHorizontal="@dimen/large_padding"
            android:text="@{viewModel.uiState.searchInput}"
            android:textColor="@color/text_title"
            android:textColorHint="@color/hint_search_color"
            android:textSize="@dimen/text_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <requestFocus />
<!--        android:afterTextChanged="@{(text) -> viewModel.onSearchInputChange(text)}"-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_league"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_bar"
            app:setRecyclerItems="@{viewModel.uiState.leagueList}"
            tools:listitem="@layout/item_leagues" />

        <ProgressBar
            android:id="@+id/progress_bar_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showIfLoading="@{viewModel.uiState.loading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>