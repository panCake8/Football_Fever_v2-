<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:drawableRight="@drawable/search_icon"
            android:drawableTint="@color/hint_search_color"
            android:iconifiedByDefault="false"
            android:layout_marginTop="@dimen/medium_margin"
            android:autofillHints="creditCardExpirationDate"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/hint_search_color"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/text_title"
            android:hint="@string/search_text"
            android:paddingHorizontal="@dimen/large_padding"
            android:background="@drawable/search_bar"
            />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            app:singleSelection="true"
            app:selectionRequired="true"
            >

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Chips_style"
                android:text="@string/player_text"
                android:checked="true"
                android:layout_marginEnd="@dimen/semi_large_margin"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_color"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Chips_style"
                android:layout_marginEnd="@dimen/semi_large_margin"
                android:text="@string/club_text"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textSize="@dimen/text_small"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_coach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Chips_style"
                android:layout_marginEnd="@dimen/semi_large_margin"
                android:text="@string/coach_text"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_color"
                android:textSize="@dimen/text_small"
                />


        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_search"
            />



    </LinearLayout>
</layout>