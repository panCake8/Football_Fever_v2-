<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.pancake.footballfever.ui.search.SearchViewModel" />

        <variable
            name="listener"
            type="com.pancake.footballfever.ui.search.SearchListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        >

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:autofillHints="creditCardExpirationDate"
            android:background="@drawable/search_bar"
            android:drawableRight="@drawable/search_icon"
            android:drawableTint="@color/hint_search_color"
            android:hint="@string/search_text"
            android:iconifiedByDefault="false"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingHorizontal="@dimen/large_padding"
            android:text="@={viewModel.searchText}"
            android:textColor="@color/text_title"
            android:textColorHint="@color/hint_search_color"
            android:textSize="@dimen/text_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_component"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            app:layout_constraintEnd_toStartOf="@+id/search_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_bar"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_league"
                style="@style/Chips_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/semi_large_margin"
                android:checked="true"
                android:onClick="@{()-> viewModel.onClickLeagueChip()}"
                android:text="@string/league_text"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_color" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_club"
                style="@style/Chips_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/semi_large_margin"
                android:onClick="@{()-> viewModel.onClickTeamChip()}"
                android:text="@string/team_text"
                android:textSize="@dimen/text_small"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_color" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_coach"
                style="@style/Chips_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/large_margin"
                android:onClick="@{()-> viewModel.onClickCoachChip()}"
                android:text="@string/coach_text"
                android:textSize="@dimen/text_small"
                app:checkedIconVisible="false"
                app:chipBackgroundColor="@color/chip_background_color" />


        </com.google.android.material.chip.ChipGroup>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/large_margin"
                android:layout_marginBottom="@dimen/large_margin"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip_component"
                app:setRecyclerItems="@{viewModel.searchResult.toDate()}"
                app:showWhenSearchSuccess="@{viewModel.searchResult}"
                app:spanCount="2"
                tools:listitem="@layout/item_search" />

            <ImageView
                android:id="@+id/image_view_error"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/image_search_error"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showWhenSearchError="@{viewModel.searchResult}" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showWhenSearchLoading="@{viewModel.searchResult}" />




        <com.google.android.material.chip.ChipGroup
            android:id="@+id/search_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="none"
            app:showWhenSearchInSearchSuggests="@{viewModel.searchResult}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_component"
           >

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_all"
            android:textColor="@color/white60"
            android:textSize="@dimen/text_small"
            android:layout_marginHorizontal="@dimen/semi_huge"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_suggest"
            app:showWhenSearchInSearchSuggests="@{viewModel.searchResult}"
            />

        <ImageView
            android:id="@+id/image_view_loading"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/image_search_loading"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_suggest"
            app:showWhenSearchInSearchSuggests="@{viewModel.searchResult}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:showWhenEmptySearch="@{viewModel.searchResult}">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="360dp"
                android:layout_height="180dp"
                android:layout_marginBottom="@dimen/semi_huge"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/search_empty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_results_found"
                android:textColor="@color/white60"
                android:textSize="@dimen/text_medium"
                android:visibility="visible" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>