<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/Secondary_color"
    app:cardCornerRadius="@dimen/large_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/coaches_card_height"
    android:layout_marginVertical="@dimen/small_margin"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/medium_padding"
        android:paddingHorizontal="@dimen/large_padding"
        >

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/image_coach"
            android:layout_width="@dimen/coach_image_width"
            android:layout_height="@dimen/coach_image_height"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="1"
            tools:src="@drawable/coach" />
        <TextView
            android:id="@+id/text_coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/white60"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/large_margin"
            app:layout_constraintStart_toEndOf="@+id/image_coach"
            app:layout_constraintTop_toTopOf="@+id/image_coach"
            tools:text="@string/pep_guardiola"
            />
        <TextView
            android:id="@+id/text_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white38"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/large_margin"
            app:layout_constraintStart_toEndOf="@+id/image_coach"
            app:layout_constraintTop_toBottomOf="@+id/text_coach_name"
            tools:text="@string/barcelona"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>